:root {
    {{& theme }}
}

*,
*:before,
*:after {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
}

body {
    display: grid;
    place-content: center;

    background-image: linear-gradient(
        122deg,
        hsl(var(--primary-light)) 0%,
        hsl(var(--primary-dark)) 100%
    );
}

html,
body {
    height: 100%;
}

article {
    width: 80vw;
    height: 60vh;
    border-radius: 4px;

    display: grid;
    align-items: center;
    grid-template-columns: repeat(3, auto);
    grid-template-rows: repeat(3, auto);
}

article:after {
    content: '';
    grid-column: 1 / -1;
    grid-row: 1 / -1;
    height: 100%;
    width: 100%;
    z-index: -1;

    transition: box-shadow 0.5s ease-in;
    will-change: box-shadow;

    /* prettier-ignore */
    box-shadow:
        inset 0 0 0 40vh hsla(var(--dark), 0.25),
              0 1px 1px hsla(var(--dark), .6),
              0 2px 2px hsla(var(--dark), .6),
              0 4px 4px hsla(var(--dark), .6),
              0 8px 8px hsla(var(--dark), .6);

    mix-blend-mode: soft-light;
    filter: blur(2px);
}

article:after:hover {
    transition: box-shadow 0.5s ease-out;
    will-change: box-shadow;

    /* prettier-ignore */
    box-shadow:
        inset 0 0 0 40vh hsla(var(--dark), 0.5),
              0 1px 1px hsla(var(--dark), .6),
              0 2px 2px hsla(var(--dark), .6),
              0 4px 4px hsla(var(--dark), .6),
              0 8px 8px hsla(var(--dark), .6),
              0 16px 16px hsla(var(--dark), .6),
              0 32px 32px hsla(var(--dark), .6);

    filter: blur(5px);
}

h1 {
    font-size: calc(2rem + 2.4vw * 1.5);
    color: hsl(var(--light));
    grid-row: 2;
    grid-column: 2;
    text-align: center;
    padding: 5vmin;
}
